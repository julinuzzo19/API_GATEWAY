# ==================================
# API GATEWAY - CONFIGURACIÓN
# ==================================

# Puerto en el que correrá el API Gateway
PORT=3000

# Entorno de ejecución (development, production)
NODE_ENV=development

# ==================================
# MICROSERVICIOS
# ==================================

# URL del servicio de autenticación
AUTH_SERVICE_URL=http://localhost:3001

# URL del servicio de ecommerce
ECOMMERCE_SERVICE_URL=http://localhost:3002

# ==================================
# SEGURIDAD
# ==================================

# Secreto compartido entre el gateway y los microservicios
# Los microservicios deben validar este header para asegurar que la petición viene del gateway
GATEWAY_SECRET=tu_secreto_super_seguro_aqui

# Secreto para firmar/validar JWT (debe ser el mismo que usa el servicio de autenticación)
JWT_SECRET=tu_jwt_secret_super_seguro_aqui

# ==================================
# RATE LIMITING
# ==================================

# Ventana de tiempo para rate limiting (en milisegundos)
# 900000 = 15 minutos
RATE_LIMIT_WINDOW_MS=900000

# Máximo de peticiones por IP en la ventana de tiempo
RATE_LIMIT_MAX_REQUESTS=100

# ==================================
# CORS
# ==================================

# Orígenes permitidos para CORS (separados por coma)
# En desarrollo puedes usar * o dejar http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ==================================
# LOGGING
# ==================================

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info
